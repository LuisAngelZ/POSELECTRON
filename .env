# =================================
# CONFIGURACIÓN DEL SERVIDOR
# =================================
NODE_ENV=development
PORT=3000

# =================================
# SEGURIDAD JWT
# =================================
JWT_SECRET=tu-secret-key-muy-seguro-cambiar-en-produccion
JWT_EXPIRES=24h

# =================================
# CONFIGURACIÓN DE IMPRESORA
# =================================
# Nombre exacto de tu impresora (como aparece en Windows)
PRINTER_NAME=EPSON TM-T20III Receipt

# Interfaz de conexión de la impresora
# Opciones:
# 1. USB directo: printer:EPSON TM-T20IIII Receipt
# 2. Puerto serie: serial:COM1 (cambiar COM1 por tu puerto)
# 3. Red TCP/IP: tcp://192.168.1.100:9100 (cambiar por la IP real)
PRINTER_INTERFACE=printer:EPSON TM-T20IIII Receipt

# =================================
# INFORMACIÓN DE LA EMPRESA
# =================================
COMPANY_NAME=MI RESTAURANTE
COMPANY_ADDRESS=Av. Heroínas 123
COMPANY_CITY=Cochabamba, Bolivia
COMPANY_PHONE=Tel: +591 4 XXX XXXX
COMPANY_EMAIL=contacto@mirestaurante.com
COMPANY_NIT=NIT: 123456789

# =================================
# CONFIGURACIÓN DE IMPRESIÓN
# =================================
# Ancho del papel (caracteres por línea)
PRINTER_WIDTH=48

# Codificación de caracteres
PRINTER_CHARSET=PC850_MULTILINGUAL