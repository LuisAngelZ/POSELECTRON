{
  "name": "pos-desktop-app",
  "version": "1.0.0",
  "description": "Sistema POS de Escritorio",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "server": "cd backend && npm start",
    "build": "npm run server:build && electron-builder",
    "server:build": "cd backend && npm install",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "test-server": "cd backend && node server.js",
    "create-users": "node create-users.js"
  },
  "build": {
    "appId": "com.empresa.pos-desktop",
    "productName": "Sistema POS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "backend/**/*",
      "public/**/*",
      "!backend/node_modules",
      "!backend/database/pos.db"
    ],
    "extraResources": [
      {
        "from": "backend/database",
        "to": "database",
        "filter": [
          "**/*",
          "!pos.db"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "electron-is-dev": "^2.0.0",
    "electron-window-state": "^5.0.3",
    "sqlite3": "^5.1.7"
  }
}
